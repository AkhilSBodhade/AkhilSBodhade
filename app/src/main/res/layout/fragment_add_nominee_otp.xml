<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="35dp"
    tools:context=".view.activity.TutorialActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_onboarding"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="@string/add_nominee_otp"
        android:textColor="@color/black"
        android:textSize="35sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="@string/signup_otp_verfiy_instr"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/dmsans_regular"
        android:text="@string/enter_otp"
        android:textColor="@color/tutorial_desc_color"
        android:textSize="16sp" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:bar_enabled="false"
        app:box_margin_left="20dp"
        app:height="40dp"
        app:length="4"
        app:otp_box_background="@drawable/bg_otp_box"
        app:otp_box_background_active="@drawable/bg_otp_box_active"
        app:otp_box_background_error="@drawable/bg_otp_box_error"
        app:otp_box_background_inactive="@drawable/bg_otp_box"
        app:otp_box_background_success="@drawable/bg_otp_box_success"
        app:otp_text_size="24dp"
        app:width="40dp" />


    <LinearLayout
        android:id="@+id/txt_nominee_otp_timer_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:text="@string/your_otp_will_expire_in"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_nominee_otp_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:text=" 5:00 min"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_nominee_resend_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/dmsans_regular"
        android:padding="5dp"
        android:visibility="gone"
        android:text="@string/resend_otp"
        android:textColor="@color/primary_blue"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btn_nominee_otp_authorise"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_blue_rounded"
        android:fontFamily="@font/dmsans_regular"
        android:text="@string/authorise"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</androidx.appcompat.widget.LinearLayoutCompat>