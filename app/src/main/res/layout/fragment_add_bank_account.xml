<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Type Of Account   -->

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/tutorial_desc_color"
                android:textSize="14sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_text_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:visibility="gone"
                    android:entries="@array/BankAccountTypes"
                    android:fontFamily="@font/dmsans_regular"
                    android:padding="15dp"
                    android:textSize="16sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!-- Account Holder Name  -->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_add_bank_acc_holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/tutorial_desc_color"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_add_bank_acc_holder_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_text_bg"
                android:ems="10"
                android:fontFamily="@font/dmsans_regular"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textSize="16sp" />

            <!-- Bank Name   -->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_add_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/tutorial_desc_color"
                android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_add_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edt_text_bg"
                    android:ems="10"
                    android:fontFamily="@font/dmsans_regular"
                    android:inputType="textPersonName"
                    android:padding="15dp"
                    android:textSize="16sp" />

            <!-- Branch Name   -->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_add_bank_branch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/tutorial_desc_color"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_add_branch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_text_bg"
                android:ems="10"
                android:fontFamily="@font/dmsans_regular"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textSize="16sp" />

            <!-- Bank Account Number (Last 4 digits)  -->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_add_bank_acc_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/tutorial_desc_color"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_add_bank_acc_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_text_bg"
                android:ems="10"
                android:maxLength="4"
                android:fontFamily="@font/dmsans_regular"
                android:inputType="numberSigned"
                android:padding="15dp"
                android:textSize="16sp" />

            <!-- IFSC Code -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_add_bank_ifsc_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/dmsans_regular"
                    android:textColor="@color/tutorial_desc_color"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_info" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_add_bank_ifsc_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_text_bg"
                android:ems="10"
                android:maxLength="11"
                android:textAllCaps="true"
                android:fontFamily="@font/dmsans_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="16sp" />

            <!-- Customer ID-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_add_bank_customer_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/tutorial_desc_color"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_add_bank_customer_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_text_bg"
                android:ems="10"
                android:fontFamily="@font/dmsans_regular"
                android:inputType="numberSigned"
                android:padding="15dp"
                android:textSize="16sp" />

            <!-- Relationship Manager -->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_add_bank_relationship_mgr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/tutorial_desc_color"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_add_bank_relationship_mgr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_text_bg"
                android:ems="10"
                android:fontFamily="@font/dmsans_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="16sp" />

            <!-- Add Comment -->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_add_bank_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/dmsans_regular"
                android:textColor="@color/tutorial_desc_color"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_add_bank_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edt_text_bg"
                android:ems="10"
                android:fontFamily="@font/dmsans_regular"
                android:inputType="text"
                android:padding="15dp"
                android:textSize="16sp" />

            <!-- Share Now -->

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dmsans_regular"
                    android:text="@string/add_share_now"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_share_now_info"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_info" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/yes"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_add_bank_share_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:fontFamily="@font/dmsans_regular"
                    android:showText="true" />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <include layout="@layout/view_upload_file"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

    <include layout="@layout/view_form_bottom" />


</androidx.appcompat.widget.LinearLayoutCompat>