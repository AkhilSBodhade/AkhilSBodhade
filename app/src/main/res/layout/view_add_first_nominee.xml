<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_first_nominee_box"
        android:orientation="vertical"
        android:padding="25dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="216dp"
            android:layout_height="180dp"
            android:layout_marginTop="-40dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/signup_new_user" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dmsans_bold"
            android:text="Add Your\nFirst Nominee"
            android:textColor="@color/white"
            android:textSize="31sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_home_add_nominee"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:background="@drawable/btn_white_rounded"
            android:fontFamily="@font/dmsans_regular"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Add Nominee"
            android:textAllCaps="false"
            android:textColor="@color/black" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="216dp"
        android:layout_height="180dp"
        android:layout_marginStart="40dp"
        app:srcCompat="@drawable/signup_new_user" />

</FrameLayout>
