<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.fragment.OnboardingStartFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="173dp"
        android:layout_height="173dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription=""
        android:src="@drawable/myfolio_circle"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/my_folio"
        android:fontFamily="@font/dmsans_bold"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="@string/onboarding_intro_desc"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/dmsans_regular"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="216dp"
        android:layout_height="180dp"
        android:layout_marginTop="22dp"
        android:layout_marginStart="131dp"
        android:src="@drawable/signup_new_user"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:padding="2dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_signup_intro_login"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="22dp"
            android:layout_weight="1"
            android:fontFamily="@font/dmsans_regular"
            android:background="@drawable/btn_blue_rounded"
            android:text="@string/log_in"
            android:textAllCaps="false"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btn_signup_intro_reg"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="22dp"
            android:fontFamily="@font/dmsans_regular"
            android:background="@drawable/btn_black_rounded"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>